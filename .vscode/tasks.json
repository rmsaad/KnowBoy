{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SDL Debug Cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B ./platform/sdl/build",
                "./platform/sdl",
                "-DCMAKE_BUILD_TYPE=Debug",
            ]
        },
        {
            "label": "SDL Debug Make",
            "options": {
                "cwd": "${workspaceFolder}/platform/sdl/build"
            },
            "windows": {
                "command": "msbuild",
                "args": [
                    "Knowboy.sln",
                    "/p:Configuration=Debug"
                ],
            },
            "linux": {
                "command": "make"
            }
        },
        {
            "label": "SDL Debug Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "SDL Debug Cmake",
                "SDL Debug Make"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}